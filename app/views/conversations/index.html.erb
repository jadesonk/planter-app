<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6">
      <h2>My listing's conversations</h2>
      <% @receiving_conversations.each do |conversation| %>
        conversation for: <%= link_to conversation.listing.title, conversation_path(conversation) %>

        <%# conversation.messages.each do |message| %>
          <p><%#= message.content %></p>
        <%# end %>
      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <h2>My interested listing's conversations </h2>
      <% @sending_conversations.each do |conversation| %>
        conversation for: <%= link_to conversation.listing.title, conversation_path(conversation) %>

        <%# conversation.messages.each do |message| %>
          <p><%#= message.content %></p>
        <%# end %>
      <% end %>
    </div>
  </div>
  <div class="row" data-controller="conversations">
    <div class="col-12 col-md-4">
      <ul class="list-unstyled">
        <% @all_conversations.each do |conversation| %>
          <li>
            <div class="notification">
              <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
              <div class="notification-content">
                <p><small>14th January</small></p>
                <p><%= conversation.listing.title %></p>
              </div>

<!--               <div class="notification-actions">
                <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
                <a href="#">Delete <i class="far fa-trash-alt"></i></a>
              </div> -->
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-12 col-md-8 bg-pink">

    </div>
  </div>
</div>
