<div class="listing-card shadow">
  <% if listing.photos.first.present? %>
    <%= cl_image_tag listing.photos.first.key, height: 200, width: 200, crop: :fill %>
  <% else %>
    <img class="" src="https://images.pexels.com/photos/970089/pexels-photo-970089.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=100" alt="Card image cap">
  <% end %>
  <div class="listing-card-body">
    <h4 class="listing-card-title">
      <%= link_to listing_path(listing) do %>
        <%= listing.title %>
      <% end %>
    </h4>
    <p class="listing-card-text"><%= listing.description %></p>
    <span class="listing-card-type <%= listing.listing_type %>"><%= listing.listing_type %></span>
    <ul class="list-unstyled listing-card-tags d-flex align-items-center">
      <% if listing.tags.present? %>
        <h6><span class="badge badge-info p-1 mr-2 font-weight-normal">tags: </span></h6>
      <% else %>
        <h6><span class="badge badge-secondary p-1 mr-2 font-weight-normal">no tags</span></h6>
      <% end %>
      <% listing.tags.each do |tag| %>
        <li class="mr-1">
          <h6><span class="badge badge-info p-1 font-weight-normal"><%= tag.name %></span></h6>
        </li>
      <% end %>
    </ul>
  </div><!-- /.listing-card-body -->
</div><!-- /.listing-card -->
