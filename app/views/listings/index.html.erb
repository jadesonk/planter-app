<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <h1>Listings#index</h1>
      <p>Find me in app/views/listings/index.html.erb</p>
    </div><!-- /.col-12 .col-lg-10 -->
  </div><!-- /.row .justify-content-center -->
  <div class="row justify-content-center" data-controller="listings">
    <div class="col-12 col-lg-10">
      <div class="listing-filter mb-4">
        <select class="form-control"
          multiple="multiple"
          data-target="listings.select"
          data-action="change->listings#filter"
        >
          <% @tags.each do |tag| %>
            <option><%= tag.name %></option>
          <% end %>
        </select>
      </div><!-- /.listing-filter .mb-4 -->
      <section class="listing-list-view" data-target="listings.display">
        <%= render partial: 'listing_list_view', locals: { listings: @listings } %>
      </section><!-- /.listing-list-view -->
    </div><!-- /.col-12 .col-lg-10 -->
  </div><!-- /.row .justify-content-center-->
</div><!-- /.container .py-5 -->
