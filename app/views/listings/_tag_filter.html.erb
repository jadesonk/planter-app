<form
  data-action="ajax:success->listings#result"
  data-action="ajax:error->listings#error"
  data-target="listings.form"
  data-remote="true"
  method="post"
  action="<%= listings_filter_path %>"
  class="ml-auto"
>
  <label for="select">Filter listings by tags</label>
  <section>
    <select
      data-action="change->listings#filter"
      data-target="listings.select"
      name="select"
      class="form-control shadow"
      selected=""
    >
      <option selected></option>
      <% tags.each do |tag| %>
        <option><%= tag.name %></option>
      <% end %>
    </select>
  </section>
</form>
