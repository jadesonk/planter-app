<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTIAtihoqKyxS4gsZdQQARkPTidvdprXwkQww&usqp=CAU);">
  <div class="container">
    <h1><u>Planter</u> <strong> your guide </strong> to the <strong> gardens of the world </strong>!</h1>
    <p><i>Swap: </i> <i>Donate: </i> or <i> Want</i>.</p>
    <%= link_to 'Create your own question', new_question_path, class: 'btn btn-primary' %>
    <a class="btn btn-flat" href="#">Search plants</a>
  </div>
</div>

<a class="btn btn-ghost" href="#">Swap a plant</a>
<a class="btn btn-flat" href="#">Donate a plant</a>
<a class="btn btn-gradient" href="#">Want a plant now</a>

<ul class="list-unstyled">
  <% @questions.each do |question| %>
  <li>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://image.shutterstock.com/z/stock-photo-tropical-leaves-foliage-plant-bush-floral-arrangement-nature-backdrop-isolated-on-white-background-1059170384.jpg)">

      <%= link_to question[:question_text], question_path(question) %>
    </div>
  </li>
  <% end %>
</ul>

